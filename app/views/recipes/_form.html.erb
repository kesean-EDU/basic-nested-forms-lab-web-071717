<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <ol>
    <%= f.fields_for :ingredients do |ingr| %>
    <li>
      name: <%= ingr.text_field :name %>
      quantity: <%= ingr.text_field :quantity %>
    </li>
  </ol>
<% end %>
<%= link_to 'add ingredient', @recipe %>
<%= f.submit %>
<% end %>
